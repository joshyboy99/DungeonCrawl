<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.5" onKeyPressed="#handleKeyPress" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <GridPane fx:id="squares" onKeyPressed="#handleKeyPress" style="-fx-background-color: white;" SplitPane.resizableWithParent="false">
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
      <TextArea id="text-area" fx:id="instructions" editable="false" onKeyPressed="#handleKeyPress" prefHeight="70.0" prefWidth="100.0" style="-fx-wrap-text: true;" stylesheets="@textarea.css" wrapText="true">
         <font>
            <Font name="8_bit_1_6 Regular" size="13.0" />
         </font>
      </TextArea>
   </items>
</SplitPane>
